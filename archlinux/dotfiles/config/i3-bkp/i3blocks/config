# Network interface monitoring
#
# If the instance is not specified, use the interface used for default route.
# The address can be forced to IPv4 or IPv6 with -4 or -6 switches.
[iface]
label=ðŸ‘»
instance=wlp2s0
color=#00FF00
interval=5
separator=false

[wifi]
label=ï‡«
instance=wlp2s0
interval=5
separator=false

[bandwidth]
label=ðŸ‘½
instance=enp3s0
interval=5
separator=true

# [load_average]
# interval=10

# Battery indicator
#
# The battery instance defaults to 0.
[battery]
label=BAT
label=ðŸ”‹
instance=0
interval=5
separator=true

# Volume indicator
[volume_pulseaudio]
command=/home/iury/.config/i3/i3blocks/volume_pulseaudio -Sa
interval=persist
separator=true

# Date Time
[time]
command=date '+%Y-%m-%d %H:%M:%S'
interval=1
separator=true

